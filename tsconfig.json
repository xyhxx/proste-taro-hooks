{
  "compilerOptions": {
    "target": "es5",
    "module": "esNext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "pretty": true,
    "rootDir": "src",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "outDir": "es",
    "lib": ["es2018", "dom"],
    "importHelpers": false,
    "skipDefaultLibCheck": true
  },
  "exclude": ["node_modules", "es", "__tests__", "jest.config.ts", "jest.config.*.ts"]
}
